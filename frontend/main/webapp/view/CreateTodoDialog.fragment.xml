<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        title="Nova Tarefa"
        draggable="true"
        resizable="true"
        contentWidth="400px">

        <VBox class="sapUiSmallMargin">
            <Label text="Título" />
            <Input
                value="{create>/title}"
                placeholder="Digite o título da tarefa" />

            <Label text="Usuário" />
            <Input
                type="Number"
                value="{create>/userId}"
                placeholder="ID do usuário" />
        </VBox>

        <beginButton>
            <Button
                text="Salvar"
                type="Emphasized"
                press=".onCreateTodo" />
        </beginButton>

        <endButton>
            <Button
                text="Cancelar"
                press=".onCloseCreateDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
